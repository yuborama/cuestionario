                <div class="grid-x grid-padding-x">

                    <div class="cell small-6 text-center">
                        <h3>PREGUNTA: </h3>
                    </div>
                    <div class="cell small-6 text-center">
                        <h3>RESPUESTA: </h3>
                    </div>
                    {{#each resultadop}}
